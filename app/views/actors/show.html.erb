<div>
  <div>
    <h1>
      Actor #<%= @the_actor.id %> details
    </h1>

    <div>
      <div>
        <a href="/actors">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_actor/<%= @the_actor.id %>">
          Delete actor
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_actor.name %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @the_actor.dob %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_actor.bio %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @the_actor.image %>">
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_actor.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_actor.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

  <% @the_actor.characters.each do |a_character| %>
    <tr>
      <td>
        <%= a_character.movie.title %>
      </td>

      <td>
        <%= a_character.movie.year %>
      </td>

      <td>
        <%= a_character.movie.director.name %>
      </td>

      <td>
        <%= a_character.name %>
      </td>

      <td>
        <a href="/movies/<%= a_character.movie.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>

<div>
  <div>
    <h2>
      Add to Filmography
    </h2>

    <form action="/insert_character"  method="post" >
      <div>
        <label for="movie_box">
          Movie
        </label>

        <input type="text" id="movie_box" name="query_movie_id">
      </div>

      <div>
        <label for="actor_box">
          Actor ID
        </label>

        <input type="text" id="actor_box" name="query_actor_id" value="<%= @the_actor.id %>">
      </div>

      <div>
        <label for="char_box">
          Character
        </label>

        <input type="text" id="char_box" name="query_name" placeholder="Woman in suit">
      </div>


      <button>
        Add character
      </button>
    </form>
  </div>
</div>

<div>
  <div>
    <h2>
      Edit actor
    </h2>

    <form action="/modify_actor/<%= @the_actor.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_actor.name %>">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob" value="<%= @the_actor.dob %>">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <textarea id="bio_box" name="query_bio"><%= @the_actor.bio %></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_actor.image %>">
      </div>

      <button>
        Update actor
      </button>
    </form>
  </div>
</div>

<hr>
